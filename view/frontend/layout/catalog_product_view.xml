<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info">
            <block name="product.pdf.documents" class="CustomVendor\PDPGroupSections\Block\Product\View\Attributes"
                    template="CustomVendor_PDPGroupSections::product/view/section/pdf-documents.phtml">
            </block>
        </referenceBlock>

        <referenceBlock name="product.attributes">
            <action method="setTemplate">
                <argument name="templatae" xsi:type="string">CustomVendor_PDPGroupSections::product/view/attributes.phtml</argument>
            </action>
        </referenceBlock>

        <referenceBlock name="product.info.details">
            <block name="product.features"
                class="CustomVendor\PDPGroupSections\Block\Product\View\Attributes"
                as="features"
                template="CustomVendor_PDPGroupSections::product/view/features.phtml"
                group="detailed_info">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Features</argument>
                    <argument name="sort_order" xsi:type="number">30</argument>
                </arguments>
            </block>

            <block name="product.documents"
                class="CustomVendor\PDPGroupSections\Block\Product\View\Attributes"
                as="documents"
                template="CustomVendor_PDPGroupSections::product/view/documents.phtml"
                group="detailed_info">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Documents</argument>
                    <argument name="sort_order" xsi:type="number">40</argument>
                </arguments>
            </block>

            <block name="product.tools"
                class="CustomVendor\PDPGroupSections\Block\Product\View\Attributes"
                as="tools"
                template="CustomVendor_PDPGroupSections::product/view/tools.phtml"
                group="detailed_info">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Tools</argument>
                    <argument name="sort_order" xsi:type="number">50</argument>
                </arguments>
            </block>

            <block name="product.packaging"
                class="CustomVendor\PDPGroupSections\Block\Product\View\Attributes"
                as="packaging"
                template="CustomVendor_PDPGroupSections::product/view/packaging.phtml"
                group="detailed_info">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Packaging</argument>
                    <argument name="sort_order" xsi:type="number">60</argument>
                </arguments>
            </block>

            <block name="product.compliance"
                class="CustomVendor\PDPGroupSections\Block\Product\View\Attributes"
                as="compliance"
                template="CustomVendor_PDPGroupSections::product/view/compliance.phtml"
                group="detailed_info">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Compliance</argument>
                    <argument name="sort_order" xsi:type="number">70</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
